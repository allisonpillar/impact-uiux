.pricing-table {
    color: @white;
    margin-top: 50px;
    text-align: center;
    .col-sm-6 {
        padding: 10px;
    }
    .pricing-table-header {
        border-top-left-radius: 30px;
        border-top-right-radius: 30px;
        padding: 15px;
    }
    .pricing-table-info {
        ul {
            margin: 0px;
            padding: 0px 25px 0px 25px;
            li {
                border-bottom: 1px solid;
                list-style-type: none;
                padding: 15px;
                &:last-child {
                    border-bottom: 0px;
                }
            }
        }
    }
    .pricing-table-footer {
        border-bottom-left-radius: 30px;
        border-bottom-right-radius: 30px;
        button {
            margin: auto;
        }
        padding: 15px;
    }
    &.basic {
        .pricing-table-header {
            background: @blue0;
        }
        .pricing-table-info {
            background: @blue1;
            ul li {
                border-color: rgba(52,110,162,.3)
            }
        }.pricing-table-footer {
            background: @blue1;
        }
    }
    &.premium {
        .pricing-table-header {
            background: @red0;
        }
        .pricing-table-info {
            background: @red1;
            ul li {
                border-color: rgba(230,75,77,.5)
            }
        }.pricing-table-footer {
            background: @red1;
            margin-bottom: 50px;
            @media (max-width: 767px) {
                margin-bottom: 0px;
            }
        }
    }
}


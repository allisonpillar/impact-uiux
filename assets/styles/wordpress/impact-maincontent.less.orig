.home-intro {
    padding: 70px 20px 90px 20px;
    text-align: center;
    hr {
        margin-bottom: 40px;
    }
}

.home-stats {
    background-color: @red0;
    background: url("http://localhost:8080/images/subtle-mini-waves.png") repeat;
    padding: 40px 25px 80px 25px;
    text-align: center;
    .stat-icon {
        background: @red1;
        border-radius: 100%;
        display: block;
        height: 200px;
        margin: 50px auto;
        padding: 40px;
        text-align: center;
        width: 200px;
    }
}


.featured-charity {
    padding: 70px 20px 100px 20px;
    h2 {
        text-align: center;
    }
    hr {
        width: 10%;
    }
    .featured-charity-info {
        background: #ffffff;
        border: 2px solid @blue1;
        margin: 40px auto;
        width: 80%;
        .half {
            display: block;
            float: left;
            margin: auto;
            padding: 3%;
            width: 42%;
        }
        h3 {
            margin-top: 0px;
        }
        a {
            margin-right: 10px;
            width: 45%;
            float: left;
        }
        .summary,
        .locations {
            color: @blue1;
            font-size: 14px;
            margin: 25px 0px;
        }
        button {
            display: inline;
            margin: 25px 10px 0px 0px;
        }
        img.featured-img {
            border: 2px solid @blue1;
        }
    }
}


.news-events {
    background: @blue1;
    color: @white;
    margin-bottom: -70px;
    padding: 70px 25px 20px 25px;
    .news,
    .events {
        margin-bottom: 60px;
        p {
            color: @white;
        }
    }
    a.read-more {
        color: @blue0;
        font-weight: 700;
        text-decoration: underline;
        transition: all .1s;
        &:hover {
            color: @white;
        }
    }
}


